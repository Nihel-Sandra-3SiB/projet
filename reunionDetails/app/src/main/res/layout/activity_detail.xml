<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="android.projet.reuniondetails.detail"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_login_gradients"
    android:weightSum="1">

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#fff"
        android:padding="16dp"
        android:layout_marginTop="14dp"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_login"
        android:text="consulter les réunions local"
        android:textColor="#f16f7d"
        android:textAllCaps="false"
        android:padding="16dp"
        android:onClick="onButton1Click"
        android:clickable="true"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:textSize="18sp"

        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_login"
            android:clickable="true"
            android:onClick="onButton2Click"
            android:padding="16dp"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:text="consulter les réunions extérieure"
            android:textAllCaps="false"
            android:textColor="#f16f7d"
            android:textSize="18sp"

            android:layout_marginTop="45dp"
            android:layout_below="@+id/text2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/button3"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_login"
            android:clickable="true"
            android:onClick="onButton3Click"
            android:padding="16dp"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:text="déconnexion"
            android:textAllCaps="false"
            android:textColor="#f16f7d"
            android:textSize="18sp"

            android:layout_marginBottom="85dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />



</RelativeLayout>